<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoFinal3.MedicoMainPage"
             Title="MedicoMainPage">
    <VerticalStackLayout>
        <StackLayout>
            <Label x:Name="NombreMedicoLabel" Text="Nombre del Médico:" />
            <Label x:Name="ClientesLabel" Text="Tus clientes: " />
            <Entry x:Name="ClienteIdEntry" Placeholder="ID del Cliente" />
            <Button Text="Buscar Cliente" Clicked="OnBuscarClienteClicked" />
            <Label x:Name="ClienteInfoLabel" Text="Información del Cliente" />
            <Entry x:Name="NuevaRecetaEntry" Placeholder="Nueva Receta" />
            <Button Text="Añadir Receta" Clicked="OnAñadirRecetaClicked" />
            <Button Text="Volver" Clicked="OnVolverClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>